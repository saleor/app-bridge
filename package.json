{
  "version": "0.1.7",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "homepage": "https://saleor.io/",
  "repository": {
    "type": "git",
    "url": "git://github.com/saleor/app-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/saleor/app-bridge/issues"
  },
  "keywords": [
    "saleor",
    "app",
    "bridge",
    "app-bridge"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release": "np"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "np": {
    "yarn": false
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "name": "@saleor/app-bridge",
  "author": "Saleor Commerce",
  "description": "Library for Dashboard <-> Saleor App communication",
  "module": "dist/app-bridge.esm.js",
  "size-limit": [
    {
      "path": "dist/app-bridge.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/app-bridge.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/dom": "^8.13.0",
    "@types/uuid": "^8.3.4",
    "@types/node": "^17.0.35",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^8.0.1",
    "np": "^7.6.1",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "4.6"
  },
  "dependencies": {
    "uuid": "^8.3.2"
  }
}
